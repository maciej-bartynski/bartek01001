{
    "extends": "../../tsconfig.root.json",
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        "esModuleInterop": false,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "#src/*": [
                "src/*"
            ],
            "tests/*": [
                "tests/*"
            ]
        },
    },
}